@model IEnumerable<SkodaShop.Data.Models.Part>
@{
    ViewBag.Title = "Products";
}

<div class="row">
    <nav>
        <ul class="pagination">
            <li><a href="#"><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#"><span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a></li>
        </ul>
    </nav>
    @foreach (var part in Model)
    {    
        string url = (part.PictureUrl == null) ? "no_image.png" : part.PictureUrl;
        string source = "../Content/img/" + url;
        
        <div class="col-sm-2 col-md-2 col-lg-2">
            <div class="thumbnail">
                <a href="#">
                    <img src=@source width="100" height="100" class="img-thumbnail" />
                </a>
            </div>
        </div>
    }
</div>